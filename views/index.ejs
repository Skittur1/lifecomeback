/* Navigation */
nav {
    background-color: #f50000;
    color: #fdfdfd;
    padding: 15px 20px;
    display: flex;
    align-items: center;
    justify-content: end;
    position: sticky;
    top: 0;
    z-index: 1000;
}

nav h1 {
    font-size: 1.6rem;
    margin: 0;
}

nav ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: row;
}

nav ul li {
    margin: 0 10px;
}

nav ul li a {
    color: #ffffff;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.9rem;
    transition: color 0.3s ease;
    
}

nav ul li a:hover {
    color: #f4b400;
}

/* Slideshow */
/* Slideshow container */
.slidings {
    position: relative;
    overflow: hidden;
    height: 50vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    margin: 10px auto;
    border-radius: 10px;
    width: 1000px;
}

/* Slides container */
.slides {
    display: flex;
    width: 100%;
    height: 100%;
    transition: transform 1s ease; /* Smooth transition for sliding effect */
    object-fit: cover;
}

/* Each slide */
.latest {
    position: relative;
    min-width: 100%; /* Ensure each slide takes up the full width */
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: opacity 1s ease-in-out; /* Fade effect */
    opacity: 1; /* Hidden by default */
    object-fit: cover;
}

/* Show the active slide */
.latest.active {
    opacity: 1; /* Show the active slide */
    transition: opacity 1s ease-in-out;
}

.latest img {
    width: 100%;
    height: auto;
    object-fit: cover;
    display: block;
    margin: 0 auto;
}


.caption {
    position: absolute; /* Position relative to .latest */
    bottom: 10px;
    left: 10px;
