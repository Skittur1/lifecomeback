}

.footer nav ul li a::after {
    content: '';
    position: absolute;
    left: 50%;
    bottom: -5px;
    width: 0;
    height: 2px;
    background: #fff;
    transition: all 0.3s ease-in-out;
}

.footer nav ul li a:hover {
    color: #f0a500;
}

.footer nav ul li a:hover::after {
    left: 0;
    width: 100%;
}

.footer nav ul li a::after {
